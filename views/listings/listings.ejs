<% layout('/layouts/allListingsLayout.ejs') %>  
<div class="cardsContainer px-0 px-sm-4">
    <!-- <a href="http://localhost:8080/listings/66bf82c423b22477de6db4e8">flash</a> -->
    <% if(listings.length > 0) {%>
        <% for(let listing of listings) { %>
            <a href = "listings/<%=listing.id%>" class="card" filters = "<%=listing.filters%>">
                <% if(listing.images.length > 0) { %> 
                    <img src="<%=listing.images[0].url%>" class="card-img-top" alt="<%=listing.images[0].filename%>">
                <% } else {%>      
                    <img src="https://upload.wikimedia.org/wikipedia/commons/6/65/No-Image-Placeholder.svg" class="card-img-top" alt="No Image">
                <% }%>
                <div class="card-body">
                    <p class="card-text"><span class="listing-name"> <%=listing.title%></span><br>
                    <i>&#8377;<span style="text-decoration: line-through;"><%=listing.actualPrice.toLocaleString("en-in")%></span>
                                    <%=listing.discountedPrice.toLocaleString("en-in")%></i>/night</p>
                </div>
                <div class="card-img-overlay"></div>  
            </a> 
        <% } } %>
    <div style="margin-top: 12px ;opacity: 0.6; display: none; flex-direction: column; align-items: center;" class="no-results">
        <img style="width: 108px;" src="/assets/icons8-search.svg" alt="">
        <h3>No Results</h3>
    </div>
    <div class="col-12"></div>
</div> 