<% layout('/layouts/profileLayout') -%>
<div style="" class="spacer pt-5"></div>
<div class="col-12 px-3 ps-sm-0 col-sm-8 offset-sm-2 col-lg-6 offset-lg-3">
    <h5>Sign up</h5>
    <form class="mt-3 row needs-validation" novalidate method="post" action="/signup">
        <div class="mb-3 col-12 col-sm-6">
            <label class="form-label" for="firstName">First Name</label>
            <input id="firstName" type="text" class="form-control" name="user[firstName]" placeholder="First name" required/>
            <div class="invalid-feedback">
                Invalid First Name.
            </div>
        </div>
        <div class="mb-3 col-12  col-sm-6">
            <label class="form-label" for="lastName">Last Name</label>
            <input id="lastName" type="text" class="form-control" name="user[lastName]" placeholder="Last name" required/>
            <div class="invalid-feedback">
                Invalid Last name.
            </div>
        </div>
        <div class="mb-3 col-12  col-sm-6">
            <label class="form-label" for="contact">Contact Number</label>
            <input id="contact" type="text" class="form-control" name="user[contact]" placeholder="Contact Number" required/>
            <div class="invalid-feedback">
                Invalid Contact Number.
            </div>
        </div>
        <div class="mb-3 col-12   col-sm-6">
            <label class="form-label" for="email">Email</label>
            <input id="email" type="email" class="form-control" name="user[email]" placeholder="Email" required/>
            <div class="invalid-feedback">
                Invalid Email.
            </div>
        </div>
        <div class="mb-3 col-12">
            <label class="form-label" for="user">Username</label>
            <input id="user" type="text" class="form-control" name="user[username]" placeholder="Username" required/>
            <div class="invalid-feedback">
                Invalid Username.
            </div>
        </div>
        <div class="mb-3 col-12">
            <label class="form-label" for="pass">Password</label>
            <input id="pass" type="password" class="form-control" name="user[password]" placeholder="Password" required/>
            <div class="invalid-feedback">
                Invalid Password.
            </div>
        </div>
        <div class="mb-3">
            <p>Already a member? <a href="/login"> Log in</a> </p>
        </div>
        <div class="col-12 row">
            <div class="col"></div>
            <button class="col-4 col-sm-4 col-md-4 col-xxl-2  btn btn-red">Sign up</button>
            <div class="col"></div>
        </div>
    </form>
</div>
